{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["dom"],
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["src/modules/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
      "src",
      "index.d.ts",
      "eslintrc.config.js"
    ],
  "exclude": ["node_modules"]
}
